name: CELPIP Checker

on:
  schedule:
    cron: '0,10,20,30,40,50 8-23 * * *'  # 每天 8:00-23:59，每10分钟运行一次
  workflow_dispatch:  # 允许手动触发

jobs:
  check-celpip:
    runs-on: ubuntu-latest
    container:
      image: selenium/standalone-chrome:latest
      options: --shm-size="2g"  # 增加共享内存大小
    
    steps:
    - uses: actions/checkout@v2
    
    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.9'
    
    - name: Cache Python packages
      uses: actions/cache@v2
      with:
        path: ~/.cache/pip
        key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
        restore-keys: |
          ${{ runner.os }}-pip-

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install selenium beautifulsoup4 pandas

    - name: Add Gmail credentials
      run: |
        echo "e_user=${{ secrets.EMAIL_USER }}" >> $GITHUB_ENV
        echo "e_pwd=${{ secrets.EMAIL_PASSWORD }}" >> $GITHUB_ENV
        echo "e_client=${{ secrets.EMAIL_CLIENT }}" >> $GITHUB_ENV
    
    - name: Run script
      run: python celpip.py